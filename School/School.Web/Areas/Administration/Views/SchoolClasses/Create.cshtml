@model School.Web.Areas.Administration.Models.SchoolClassCreateSubmitModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "SchoolClasses", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.GradeId)
    @Html.HiddenFor(m => m.AcademicYearId)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.ClassLetter, new {@class = "control-label col-md-2"})
        <div class="col-md-3">
            @Html.EditorFor(m => m.ClassLetter, new {htmlAttributes = new {@class = "form-control"}})
            @Html.ValidationMessageFor(m => m.ClassLetter, "", new {@class = "text-danger"})
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SchoolThemeId, new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            @Html.DropDownListFor(m => m.SchoolThemeId, Model.SchoolThemes, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.SchoolThemeId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-3">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLinkWithSpanUsingSession(
        "Details",
        "SchoolClasses",
        "redirectUrl",
        new {@class = "btn btn-default btn-small"},
        new {@class = "glyphicon glyphicon-arrow-left"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}