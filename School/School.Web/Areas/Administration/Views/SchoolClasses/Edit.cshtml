@model School.Web.Areas.Administration.Models.SchoolClassEditViewModel
@{
    ViewBag.Title = "School - Class - Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "SchoolClasses", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.ClassLetter)
    @Html.ValidationSummary(true, "", new { @class = "text-danger"})

    <div class="form-group">
        @Html.LabelFor(m => m.GradeYear, new {@class = "control-label col-md-2"})
        <div class="col-md-3">
            @Html.DropDownListFor(m => m.GradeYear, Model.Grades, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.GradeYear, "", new {@class = "text-danger"})
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-3">
            <input type="submit" value="Save" class="btn btn-default"/>
        </div>
    </div>
}