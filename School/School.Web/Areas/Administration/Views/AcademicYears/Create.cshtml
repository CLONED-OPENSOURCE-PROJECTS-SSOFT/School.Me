@using School.Web.Areas.Administration.Models
@model AcademicYearCreateSubmitModel
@{
    ViewBag.Title = "School - Academic Years - Create";
}

<h2>Create Academic Year</h2>

@using (Html.BeginForm("Create", "AcademicYears", FormMethod.Post, new { id = "create-year-form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger"})
    
    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(m => m.StartDate, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                <div class="input-group date" id="datetimepicker1">
                    @Html.TextBoxFor(m => m.StartDate, new { @class = "form-control" }) 
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                @Html.ValidationMessageFor(m => m.StartDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.EndDate, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                <div class="input-group date" id="datetimepicker2">
                    @Html.TextBoxFor(m => m.EndDate, new { @class = "form-control" })
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                @Html.ValidationMessageFor(m => m.EndDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLinkWithSpan(
                    "", 
                    "Index", 
                    "AcademicYears", 
                    new { @class = "btn btn-default" }, 
                    new { @class = "glyphicon glyphicon-arrow-left" })

                <input type="submit" value="Save" id="spin-activator" class="btn btn-primary" />
            </div>
        </div>

    </div>
}

<div id="Creating_Modal" class="modal fade" tabindex="-1" role="dialog" data-keyboard="false" data-backdrop="static">
    
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header" style="text-align: center">
                <h3>Creating Academic Year</h3>
            </div>

            <div class="modal-body">

                <div style="height:200px">
                    <span id="spinner_center" style="position: absolute;display: block;top: 50%;left: 50%;"></span>
                </div>

            </div>

            <div class="modal-footer" style="text-align: center"></div>

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/spinner")
    @Scripts.Render("~/bundles/bootstrap-datetimepicker-linked-fields")
}

@section Styles {
    <link rel="stylesheet" href="~/Content/bootstrap-datetimepicker.css" />
}