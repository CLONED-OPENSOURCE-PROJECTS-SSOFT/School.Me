@model School.Web.Areas.Administration.Models.AcademicYearDetailsDeleteModel
@{
    ViewBag.Title = "School - Academic Year - Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this academic year?</h3>
<hr/>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.Id)

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartDate)
            @Html.HiddenFor(model => model.StartDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndDate)
            @Html.HiddenFor(model => model.EndDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GradesCount)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GradesCount)
            @Html.HiddenFor(model => model.GradesCount)
        </dd>
    </dl>

    <div class="form-actions no-color">
        <button type="submit" class="btn btn-danger btn-sm">
            <span class="glyphicon glyphicon-trash"></span>
        </button>
        @Html.ActionLinkWithSpan(
            "Index", 
            new { @class = "btn btn-default btn-sm" }, 
            new { @class = "glyphicon glyphicon-arrow-left" })
    </div>
}