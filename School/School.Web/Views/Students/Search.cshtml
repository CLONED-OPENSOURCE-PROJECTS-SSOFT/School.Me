@model IEnumerable<School.Web.Models.StudentListViewModel>

@{
    ViewBag.Title = "Search Results (Students)";
}

<h3>@ViewBag.Title</h3>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(studentModel => studentModel.Name)
        </th>
    </tr>
    @foreach (var student in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(studentModel => student.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { username = student.UserName }) |
                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                @Html.ActionLink("Details", "Details", new { username = student.UserName }) |
                @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = student.Id })
            </td>
        </tr>
    }
</table>